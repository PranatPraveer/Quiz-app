<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".Activities.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ProfileActivity"></activity>
        <activity android:name=".Activities.ResultActivity" />
        <activity
            android:name=".Activities.QuestionActivity"
            android:theme="@style/Theme.QuizApp" />
        <activity android:name=".Activities.SignUp" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.LoginIntro">

        </activity>
        <activity android:name=".Activities.MainActivity"></activity>
    </application>

</manifest>